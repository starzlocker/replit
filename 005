#include <stdio.h>

float calc_media(float n1, float n2, float n3) {
  return (n1*2 + n2*3 + n3*5)/10;
}

int main() {
  float n1, n2, n3, media;

  printf("Digite a 1° nota: ");
  scanf("%f", &n1);

  printf("Digite a 2° nota: ");
  scanf("%f", &n2);

  printf("Digite a 3° nota: ");
  scanf("%f", &n3);

  media = calc_media(n1, n2, n3);

  printf("A média final foi %.1f", media);

  return 0;
}
